{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@odata-transformer/*": ["packages/odata-transformer/src/*"],
      "@core/*": ["packages/core/src/*"],
      "@sf-normalizer/*": ["packages/sf-normalizer/src/*"]
    }
  },
  "include": ["packages/**/src"]
}
